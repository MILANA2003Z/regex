{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": { "jest": true }
    }
  ]
}
